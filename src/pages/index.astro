---
import Footer from "../components/footer/Footer.astro";
import Lava from "../components/lava/Lava.astro";
import Progress from "../components/progress/Progress.astro";
import ThemeToggle from "../components/theme-toggle/ThemeToggle.astro";
import { getActiveSlidesSource } from "../config/slides-sources";
import { getThemeCssVariables } from "../utils/source-theme";
import "../styles/global.css";

const slidesSource = getActiveSlidesSource();
const themeCssVariables = getThemeCssVariables(slidesSource.theme);
const slidesCount = slidesSource.slides.length;
---

<html lang={slidesSource.meta.language}>
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/slides/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content="Astro" />
    <script is:inline>
      // Prevent flash of wrong theme - runs before page renders
      const theme = (() => {
        const storedTheme = localStorage.getItem('theme');
        if (storedTheme === 'dark' || storedTheme === 'light') {
          return storedTheme;
        }
        return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
      })();

      const html = document.documentElement;

      // Apply theme immediately
      if (theme === 'dark') {
        html.classList.add('dark');
      } else {
        html.classList.remove('dark');
      }
      html.style.colorScheme = theme;
      localStorage.setItem('theme', theme);
    </script>
    {themeCssVariables && <style is:inline>{themeCssVariables}</style>}
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Gemunu+Libre:wght@200..800&family=League+Spartan:wght@100..900&display=swap"
      rel="stylesheet"
    />
    <title>{slidesSource.meta.title}</title>
    <meta name="description" content={slidesSource.meta.description} />
    <meta name="author" content={slidesSource.meta.author} />
    <meta name="keywords" content={slidesSource.meta.keywords} />
  </head>
  <body class="m-0 max-h-svh overflow-hidden transition-colors duration-300" style="background-color: var(--color-bg-primary);">
    <ThemeToggle />
    <div class="presentation max-h-svh relative">
      <Lava />
      <Progress />
      {
        slidesSource.slides.map(({ component: SlideComponent, order }) => (
          <SlideComponent order={order} />
        ))
      }
    </div>
    <Footer
      logoSrc={slidesSource.footer.logoSrc}
      logoAlt={slidesSource.footer.logoAlt}
      websiteHref={slidesSource.footer.websiteHref}
      websiteLabel={slidesSource.footer.websiteLabel}
      slidesCount={slidesCount}
    />
  </body>
</html>
