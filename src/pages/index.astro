import SmartMerge from "../slides/SmartMerge.astro";
import OutputStructure from "../slides/OutputStructure.astro";
import FinalOptimization from "../slides/FinalOptimization.astro";
import WindsurfRules from "../slides/WindsurfRules.astro";
import Results from "../slides/Results.astro";
import HumanProblem from "../slides/HumanProblem.astro";
import Timeline from "../slides/Timeline.astro";
import Summary from "../slides/Summary.astro";
import Social from "../slides/Social.astro";
import Outro from "../slides/Outro.astro";
---

<html lang="sk">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/slides/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content="Astro" />
    <script is:inline>
      // Prevent flash of wrong theme - runs before page renders
      const theme = (() => {
        const storedTheme = localStorage.getItem('theme');
        if (storedTheme === 'dark' || storedTheme === 'light') {
          return storedTheme;
        }
        return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
      })();

      const html = document.documentElement;

      // Apply theme immediately
      if (theme === 'dark') {
        html.classList.add('dark');
      } else {
        html.classList.remove('dark');
      }
      html.style.colorScheme = theme;
      localStorage.setItem('theme', theme);
    </script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Gemunu+Libre:wght@200..800&family=League+Spartan:wght@100..900&display=swap"
      rel="stylesheet"
    />
    <title>
      AI abstractions over Design System | Lukáš Chylík
    </title>
    <meta
      name="description"
      content="Cesta od vibe codingu k AI-first vývoju v AIS Servis. AI abstrakcie nad design systémom pre frontend vývojárov."
    />
    <meta name="author" content="Lukas Chylik" />
    <meta
      name="keywords"
      content="AI, Design System, AI Guidelines, Frontend Development, Claude Code, GitHub Copilot, Windsurf"
    />
  </head>
  <body class="m-0 max-h-svh overflow-hidden transition-colors duration-300" style="background-color: var(--color-bg-primary);">
    <ThemeToggle />
    <div class="presentation max-h-svh relative">
      <Lava />
      <Progress />
      <Main order={1} />
      <Speaker order={2} />
      <AISContext order={3} />
      <MyRole order={4} />
      <CurrentState order={5} />
      <TheBeginning order={6} />
      <FigmaMCP order={7} />
      <FigmaCodeConnect order={8} />
      <PainPoint1 order={9} />
      <AIGuidelines order={10} />
      <GuidelinesStructure order={11} />
      <Distribution order={12} />
      <FirstVersion order={13} />
      <FirstProblems order={14} />
      <BeyondUI order={15} />
      <HallucinationProblem order={16} />
      <SlashCommands order={17} />
      <Skills order={18} />
      <CodeReviewSkill order={19} />
      <MultiToolSupport order={20} />
      <MaintenanceProblem order={21} />
      <TemplateEngine order={22} />
      <AdapterConfigs order={23} />
      <TemplateToOutput order={24} />
      <SkillTemplate order={25} />
      <AgentTemplates order={26} />
      <ShipItFlow order={27} />
      <SmartMerge order={28} />
      <OutputStructure order={29} />
      <FinalOptimization order={30} />
      <WindsurfRules order={31} />
      <Results order={32} />
      <HumanProblem order={33} />
      <Timeline order={34} />
      <Summary order={35} />
      <Social order={36} />
      <Outro order={37} />
    </div>
    <Footer />
  </body>
</html>
