---
interface Props {
  id: string;
  title: string;
  desc: string;
  code?: string;
  image?: string;
}

const { id, title, desc, code, image } = Astro.props;
---

<section
  id={id}
  class="h-svh flex flex-col justify-center p-8 bg-white/85 backdrop-blur-md"
>
  <h2 class="text-3xl font-bold mb-4 text-blue-600">{title}</h2>
  <p class="text-gray-600 mb-6">{desc}</p>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div class="prose max-w-none">
      <slot />
    </div>
    <div class="bg-white rounded-lg shadow p-4">
      {
        code && (
          <pre class="bg-gray-100 p-4 rounded overflow-auto max-h-96">
            {code}
          </pre>
        )
      }
      {image && <img src={image} alt={title} class="w-full h-auto rounded" />}
    </div>
  </div>
</section>
