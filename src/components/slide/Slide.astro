---
interface Props {
  title: string;
  desc?: string;
  code?: string;
  image?: {
    url: string;
    width?: number;
    height?: number;
    alt?: string;
  };
  speaker?: boolean;
  intro?: boolean;
}

const { title, desc, code, image, speaker, intro } = Astro.props;
---

<style>
  section {
    container-type: scroll-state;
    scroll-snap-align: center;
    scroll-snap-stop: always;

    &::scroll-marker {
      content: " ";
      background-color: var(--marker-bg, var(--black-trans));
      inline-size: 1rem;
      block-size: 1rem;
      display: block;
      box-sizing: border-box;
      border-radius: 100vmax;
      border: 2px solid var(--color-theme-500);
      scale: 1;
      transition:
        scale 0.3s ease,
        background-color 0.3s ease;
    }

    &::scroll-marker:target-current {
      --marker-bg: var(--color-theme-500);
      scale: 1.5;
    }
    :is(.top, .left, .right) {
      opacity: 0;
      transition: opacity 200ms ease-in;

      @container scroll-state(snapped: block) {
        opacity: 1;
      }
    }
    .top {
      transition-delay: 400ms;
    }

    .left {
      transition-delay: 600ms;
    }
    .right {
      transition-delay: 800ms;
    }
  }
</style>

<section
  class={`h-svh grid gap-[8svb] p-[8svb] bg-white/90 backdrop-blur-lg ${speaker || intro ? "content-center" : "content-start"} relative z-50`}
>
  <div class="top">
    <h2
      class=`${speaker || intro ? "text-8xl" : "text-6xl"} font-bold text-theme-500`
    >
      {title}
      {
        desc && (
          <small class="text-black font-semibold block mt-[.5em] text-[.5em]">
            {desc}
          </small>
        )
      }
    </h2>
  </div>

  <div class="grid grid-cols-[7fr_5fr] gap-[8svb] content-center">
    <div class="max-w-none left">
      <slot />
    </div>
    <div class="right relative grid items-center">
      {
        code && (
          <pre class="bg-gray-100 p-4 rounded overflow-auto max-h-96">
            {code}
          </pre>
        )
      }
      {
        image && (
          <img
            src={image.url}
            alt={image.alt}
            width={image.width}
            height={image.height}
            class="max-h-[70svb] object-contain w-auto absolute rounded-[.5em] border-[3px] border-theme-500"
          />
        )
      }
    </div>
  </div>
</section>
