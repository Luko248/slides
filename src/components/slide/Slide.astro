---
interface Props {
  title: string;
  desc?: string;
  code?: string;
  image?: string;
}

const { title, desc, code, image } = Astro.props;
---

<section
  class="h-svh grid gap-[8svb] p-[8svb] bg-white/90 backdrop-blur-lg content-start relative z-50"
>
  <div>
    <h2 class="text-8xl font-bold mb-4 text-green-500">
      {title}
      {
        desc && (
          <small class="text-black font-semibold block mt-[.5em] text-[.5em]">
            {desc}
          </small>
        )
      }
    </h2>
  </div>

  <div class="grid grid-cols-2 gap-6 content-center">
    <div class="prose max-w-none">
      <slot />
    </div>
    <div>
      {
        code && (
          <pre class="bg-gray-100 p-4 rounded overflow-auto max-h-96">
            {code}
          </pre>
        )
      }
      {image && <img src={image} alt={title} class="w-full h-auto rounded" />}
    </div>
  </div>
</section>
