  </svg>
</button>

<script>
  import {
    toggleTheme,
    applyTheme,
    watchSystemTheme,
  } from "../../config/theme.config";

  // Theme toggle functionality
  function initTheme() {
    const btnToggle = document.getElementById("theme-toggle");
    if (!btnToggle) return;

    const sunIcon = btnToggle.querySelector(".sun-icon") as HTMLElement;
    const moonIcon = btnToggle.querySelector(".moon-icon") as HTMLElement;

    // Update icon visibility based on current state
    const updateIcons = () => {
      const isDark = document.documentElement.classList.contains("dark");
      if (isDark) {
        // Dark mode: show moon, hide sun
        sunIcon?.classList.add("hidden");
        moonIcon?.classList.remove("hidden");
      } else {
        // Light mode: show sun, hide moon
        sunIcon?.classList.remove("hidden");
        moonIcon?.classList.add("hidden");
      }
    };

    // Initialize icons based on current theme
    updateIcons();

    // Toggle theme on button click
    btnToggle.addEventListener("click", () => {
      toggleTheme();
      updateIcons();
    });

    // Watch for system theme changes
    const cleanup = watchSystemTheme((theme) => {
      applyTheme(theme);
      updateIcons();
    });

    return cleanup;
  }

  // Initialize on page load
  let cleanup = initTheme();

  // Re-initialize after Astro page transitions
  document.addEventListener("astro:page-load", () => {
    if (cleanup) cleanup();
    cleanup = initTheme();
  });
</script>
