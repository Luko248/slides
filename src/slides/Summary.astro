---
import Slide from "../components/slide/Slide.astro";
import { highlightCode } from "../utils/shiki-helper";

interface Props {
  order?: number;
}

const { order } = Astro.props;

const summaryCode = `# Celá cesta v skratke

npm install @neuron/ai-guidelines

postinstall.js
  → shipIt()
      → exportGuidelines()     # docs + smart merge
      → generateAdapters()     # templates → 3 tools
      → exportReadme()
      → exportCopilotInstructions()
      → exportAgents()

# Single source of truth
#   → 400+ vygenerovaných súborov
#   → 3 AI nástroje podporované
#   → 30 skill kategórií
#   → 77 slash commandov
#   → 2 AI agenti
#   → 80+ komponentov zdokumentovaných
#   → Automatická distribúcia cez npm`;

const highlightedCode = await highlightCode(summaryCode, "markdown");
---

<Slide title="Zhrnutie" desc="Single source of truth" order={order}>
  <div slot="left">
    <p>
      <code>npm install</code> → kompletná AI infraštruktúra.
    </p>
    <br />
    <p>
      Jeden template systém → <strong>Claude Code</strong>,
      <strong>GitHub Copilot</strong>, <strong>Windsurf</strong>.
    </p>
    <br />
    <p>
      Od vibe codingu k <strong>AI-first vývoju</strong>
      za menej ako rok.
    </p>
    <br />
    <p>
      Automaticky doručené na <code>npm install</code>.
    </p>
  </div>
  <div slot="right" set:html={highlightedCode} />
</Slide>
