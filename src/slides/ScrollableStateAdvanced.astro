---
import Slide from "../components/slide/Slide.astro";
import { codeToHtml } from "shiki";

interface Props {
  order?: number;
}

const { order } = Astro.props;

const scrollStateTypes = `nav {
  container-type: scroll-state inline-size;
  overflow: auto clip;

  &:before {
    mask: linear-gradient(
      90deg, black 0%, transparent var(--mask-left, 0%),
      transparent var(--mask-right, 100%), black 100%);

    @container scroll-state(scrollable: inline-start) {
      --mask-left: 15%;
    }
    @container scroll-state(scrollable: inline-end) {
      --mask-right: 85%;
    }
  }
}`;

const highlightedTypes = await codeToHtml(scrollStateTypes, {
  lang: "css",
  theme: "github-light",
});
---

<Slide
  title="Scrollable state"
  desc="Reálny príklad"
  sampleUrl="https://codepen.io/luko248/pen/KwKvNdV?editors=1100"
  order={order}
>
  <div slot="left">
    <p>
      Mobilná <strong>breadcrumbs</strong> navigácia, ktorá svojím vzhľadom indikuje
      či je možné scrollovať vľavo/vpravo.
    </p>
  </div>

  <div slot="right" set:html={highlightedTypes} />
</Slide>
