---
import Slide from "../components/slide/Slide.astro";

interface Props {
  order?: number;
}

const { order } = Astro.props;
---

<Slide
  title="CSS CzechoSlovakia"
  desc="Discord komunikta a podcast na Spotify"
  order={order}
>
  <div slot="left" class="grid items-center">
    <img
      class="w-[30svi] h-[30svi] rounded-3xl"
      src="/slides/assets/css_discord.svg"
      alt="CSS CzechoSlovakia Discord"
    />
  </div>
  <div slot="right" class="grid items-center">
    <img
      class="w-[30svi] h-[30svi] rounded-3xl"
      src="/slides/assets/css_spotify.svg"
      alt="CSS CzechoSlovakia Spotify"
    />
  </div>
</Slide>
