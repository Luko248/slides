---
import Slide from "../components/slide/Slide.astro";
import { highlightCode } from "../utils/shiki-helper";

interface Props {
  order?: number;
}

const { order } = Astro.props;

const problemExample = `// ❌ Problém: AI "nevidí" guidelines
> Create a button component

AI: *uses generic HTML button*

// ✅ S referenciou funguje
> @docs/buttons/button-guidelines.md
  Create a button component

AI: *uses NeuronButton with correct props*

// ❌ Design System rules chýbali
// - Kedy komponent použiť?
// - Best practices?
// - Floating element spacing?
// - UX writing pravidlá?`;

const highlightedCode = await highlightCode(problemExample, "typescript");
---

<Slide title="Prvé problémy" desc="AI nevidí markdown súbory" order={order}>
  <div slot="left">
    <p>
      AI často markdown súbory <strong>„nevidelo"</strong>.
    </p>
    <br />
    <p>
      Posielanie <strong>referencie</strong> na konkrétnu guideline spolu s promptom.
    </p>
    <br />
    <p>
      Chýbali <strong>design system rules</strong>
    </p>
    <br />
    <br />
    <br />
    <p>
      Guidelines sa postupne <strong>rozšírili</strong> a prišla optimalizácia.
    </p>
  </div>
  <div slot="right" set:html={highlightedCode} />
</Slide>
