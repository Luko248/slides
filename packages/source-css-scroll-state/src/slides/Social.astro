---
import Slide from "@presentation/components/slide/Slide.astro";
import cssDiscordLogo from "../assets/css_discord.svg?url";
import cssSpotifyLogo from "../assets/css_spotify.svg?url";

interface Props {
  order?: number;
}

const { order } = Astro.props;
---

<Slide
  title="CSS CzechoSlovakia"
  desc="Discord komunikta a podcast na Spotify"
  order={order}
>
  <div slot="left" class="grid items-center">
    <img
      class="w-[30svi] h-[30svi] rounded-3xl"
      src={cssDiscordLogo}
      alt="CSS CzechoSlovakia Discord"
    />
  </div>
  <div slot="right" class="grid items-center">
    <img
      class="w-[30svi] h-[30svi] rounded-3xl"
      src={cssSpotifyLogo}
      alt="CSS CzechoSlovakia Spotify"
    />
  </div>
</Slide>
