---
import Slide from "@presentation/components/slide/Slide.astro";
import { highlightCode } from "@presentation/utils/shiki-helper";

interface Props {
  order?: number;
}

const { order } = Astro.props;

const scrollStateBasicSyntax = `/* Je možné scrollovať hore ALEBO NIE dolu */
@container scroll-state((scrollable: top) 
or (not (scrollable: bottom))) {
  .arrow-down { opacity: 1; }
}

/* Je možné scrollovať hore A NIE dolu */
@container scroll-state((scrollable: top) 
and (not (scrollable: bottom))) {
  .arrow-down { rotate: .5turn; }
}`;

const highlightedBasicSyntax = await highlightCode(scrollStateBasicSyntax, "css");
---

<Slide title="Pokročilé nastavenia" desc="Reťazenie a negácia" order={order}>
  <div slot="left">
    <p>
      Jednotlivé dotazy je možné kombinovať pomocou<br />
      logických operátorov
      <code>and</code> a
      <code>or</code>.
    </p>
    <br />
    <br />
    <p>
      Podmienky v dotazoch je možné negovať pomocou <code>not</code>.
    </p>
  </div>
  <div slot="right" set:html={highlightedBasicSyntax} />
</Slide>
