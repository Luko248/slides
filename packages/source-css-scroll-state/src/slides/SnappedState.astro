---
import Slide from "@presentation/components/slide/Slide.astro";
import { highlightCode } from "@presentation/utils/shiki-helper";

interface Props {
  order?: number;
}

const { order } = Astro.props;

const snapTypes = `/* Zmena snap pozície na x osi */
@container scroll-state(snapped: x) { /* ... */ }
/* Zmena snap pozície na y osi */
@container scroll-state(snapped: y) { /* ... */ }
/* Zmena snap pozície na inline osi */
@container scroll-state(snapped: inline) { /* ... */ }
/* Zmena snap pozície na block osi */
@container scroll-state(snapped: block) { /* ... */ }`;

const highlightedTypes = await highlightCode(snapTypes, "css");
---

<Slide title="Snap state" desc="Identifikacia snap pozície" order={order}>
  <div slot="left">
    <p>
      <code>snapped</code> detekuje zmenu snap pozície containera.
    </p>
    <br />
    <br />
    <p>
      Závislosť na vlastnosti <code>scroll-snap-type</code>.
    </p>
    <br />
    <br />
    <p>Podporuje fyzické aj logické osi.</p>
  </div>
  <div slot="right" set:html={highlightedTypes} />
</Slide>
