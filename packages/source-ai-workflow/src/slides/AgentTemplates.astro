---
import Slide from "@presentation/components/slide/Slide.astro";
import { highlightCode } from "@presentation/utils/shiki-helper";

interface Props {
  order?: number;
}

const { order } = Astro.props;

const agentTemplateCode = `# INPUT: neuron-frontend-dev.agent.template.md
---
name: neuron-frontend-dev
description: "Neuron Framework frontend dev"
claude_model: opus
claude_color: green
github_argument_hint: "Describe the feature..."
github_tools: ["runCommands", "runTasks"]
---
You are an elite Neuron Frontend Developer...

# OUTPUT → Claude Code (diff only)
---
model: opus
color: green
---

# OUTPUT → GitHub Copilot (diff only)
---
argument-hint: "Describe the feature..."
tools: ["runCommands", "runTasks"]
---`;

const highlightedCode = await highlightCode(agentTemplateCode, "markdown");
---

<Slide title="AI Agenti" desc="Frontend developer & kóder" order={order}>
  <div slot="left">
    <ul class="list-disc pl-8 space-y-3">
      <li><span>2 agenti: <strong>frontend vývojár</strong> + <strong>kóder</strong></span></li>
      <li><span>Kóder rieši custom domain komponenty mimo UI</span></li>
      <li><span>Obaja sú generovaní z rovnakého template</span></li>
      <li><span>Podpora: <strong>Claude Code</strong> a <strong>GitHub Copilot</strong></span></li>
    </ul>
  </div>
  <div slot="right" set:html={highlightedCode} />
</Slide>
