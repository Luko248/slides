---
import Slide from "@presentation/components/slide/Slide.astro";
import hejKamoImage from "../assets/hej-kamo.png?url";

interface Props {
  order?: number;
}

const { order } = Astro.props;
---

<Slide order={order} center>
  <Fragment slot="title">Hej Kámo!</Fragment>
  <img
    src={hejKamoImage}
    alt="Hej Kámo"
    class="mx-auto w-[55svi] max-w-[720px] rounded-2xl"
    loading="eager"
    decoding="async"
  />
</Slide>
